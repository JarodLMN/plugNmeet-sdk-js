{
  "name": "plugnmeet-sdk-js",
  "version": "1.2.3",
  "description": "plugNmeet JS SDK",
  "author": "Jibon L. Costa",
  "license": "MIT",
  "source": "src/PlugNmeet.ts",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "rm -rf ./dist && concurrently -c \"red,green\" --kill-others \"tsc --watch -p . --outDir ./dist && esw -w --ext '.ts','.js' --fix\"",
    "build": "rm -rf ./dist && parcel build",
    "build-docs": "typedoc --sort source-order"
  },
  "targets": {
    "node": {
      "isLibrary": true,
      "engines": {
        "node": ">= 16"
      }
    }
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.3",
    "@parcel/transformer-typescript-types": "^2.8.3",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "concurrently": "8.0.1",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-watch": "8.0.0",
    "parcel": "^2.8.3",
    "prettier": "2.8.7",
    "typedoc": "0.24.1",
    "typescript": "5.0.4"
  }
}
